extends layout

block content
  h1= title
  h2= errorMsg
  form(method='POST')
    div.form-group
      label(for='username') Username: 
      input#username.form-control(type='text', placeholder='username', name='username', required, value='')
    div.form-group
      label(for='password') Password: 
      input#password.form-control(type='password', placeholder='password', name='password', autocomplete='off', required, value='')
    button.btn.btn-primary(type='submit') Login
  if errors
    ul
      for error in errors
        li!= error.msg
