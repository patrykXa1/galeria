extends layout

block content
  h1= title
  h2= image.name
  img.img-responsive(src=`/images/${image.path}` alt=image.path style='height:400px; display:block;')

  if comments.length
    each comment in comments
      div.comment
        p
          strong #{comment.user.imie} #{comment.user.nazwisko}: 
          | #{comment.text}
  else
    p No comments yet.

  form(method='POST')
    div.form-group
      label(for='comment') Add a comment:
      input#comment.form-control(type='text', name='comment', required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
