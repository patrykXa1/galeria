extends layout
block content
  h1=title
  form(method='POST')
    div.form-group
      label(for='imie') Imie: 
      input#imie.form-control(type='text', placeholder='min. 2 litery' name='imie' required value=(undefined===user ? '' : user.imie))
    div.form-group
      label(for='nazwisko') Nazwisko: 
      input#nazwisko.form-control(type='text', placeholder='min. 2 litery' name='nazwisko' required value=(undefined===user ? '' : user.nazwisko))
    div.form-group
      label(for='username') Username: 
      input#username.form-control(type='text', placeholder='min. 3 litery' name='username' required value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password: 
      input#password.form-control(type='password', placeholder='password' name='password' autocomplete='off' required value='')
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
